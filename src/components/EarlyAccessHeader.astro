---
import logo from "../assets/img/logo.png";

import HeaderLink from "./HeaderLink.astro";
import Image from "astro/components/Image.astro";
---

<header class="px-4 shadow-black text-white">
  <nav class="flex items-center justify-between">
    <Image src={logo} alt="Unboxthem" width="30" height="37" />

    <div class="internal-links">
      <HeaderLink class="py-5 px-2 no-underline" href="/">Home</HeaderLink>
      <HeaderLink class="py-5 px-2 no-underline" href="/send"
        >Send your story</HeaderLink
      >
    </div>
    <div class="social-links flex">
      <a class="py-4 px-2" href="https://twitter.com/unboxthem" target="_blank">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-brand-x"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M4 4l11.733 16h4.267l-11.733 -16z"></path><path
            d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path></svg
        >
      </a>
    </div>
  </nav>
</header>
